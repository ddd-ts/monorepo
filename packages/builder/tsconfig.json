{
    "include": ["src"],
    "compilerOptions": {
      /* Visit https://aka.ms/tsconfig.json to read more about this file */
  
      /* Language and Environment */
      "target": "ES2021",

      /* Modules */
      "module": "commonjs",
      "rootDir": "./src",
  
      /* Emit */
      "declaration": true,
      "sourceMap": true,
      "outDir": "./dist",
      
      /* Interop Constraints */
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
  
      /* Type Checking */
      "strict": true,
      "skipLibCheck": true
    }
  }